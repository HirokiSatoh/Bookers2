   <div class="col-xs-3">

      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "100x100" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <th>
              <% if @user.id == current_user.id %>
              <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
              <% end %>
            </th>
          </tr>
          
        </tbody>
      </table>
      <!--追加-->
      <section class="sct-color-1 slice">
        <div class="container-fluid masonry-container">
          
        <h2>New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title %><br>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit "送信", class:"btn btn-primary col-xs-12" %>
        <% end %>
    </div>
  </section>
</div>