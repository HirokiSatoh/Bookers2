<div class="body">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "100x100" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <th>
              <% if @user.id == current_user.id %>
              <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
      <!--追加-->
      <section class="sct-color-1 slice">
        <div class="container-fluid masonry-container">
        <h2>New book</h2>
        <%= form_for(@book) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %><br>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
        <% end %>
    </div>
  </section>
</div>


<div class="col-xs-9">
      <h3>Books</h3>
      <table class="table table-hover table-inverse">
        <thead>
        <tr>
          <th>userアイコン</th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
                <a><%= attachment_image_tag @book.user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "40x40" %></a>
            </td>
            <td>
              <%= link_to book.title, book_path(book) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>