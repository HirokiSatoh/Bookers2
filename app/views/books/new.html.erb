<div class="body">
<%= form_for(@book, url: books_path) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-3">
        <h2>New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title %><br>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit "送信", class:"btn btn-primary col-xs-12" %>
        <% end %>
    </div>
  

<div class="col-xs-9">
      <h3>Books</h3>
      <table class="table table-hover table-inverse">
        <thead>
        <tr>
          <!--<th>userアイコン</th>-->
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>

            <td>
              <%= link_to book.title, book_path(book) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  