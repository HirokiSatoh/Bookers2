<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li>
                <%= link_to "Home", user_path(current_user.id) , class: "glyphicon glyphicon-home home" %>
            </li>
            <li class="">
              <%= link_to "Users", '/users' , class: "glyphicon glyphicon-user users" %>
            </li>
            <li class="">
              <a class="glyphicon glyphicon-book book" href="/books"> Books</a>
            </li>
            <li class="">
              <%= link_to 'logout', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout"%>
            </li>
            
            <% else %>
            <li>
                <a class="glyphicon glyphicon-home home" href="/"> Home</a>
              </li>
            <li>
              <a class="glyphicon glyphicon-link about" href="/home/about"> About</a>
            </li>
            <li class="">
              <a class="glyphicon glyphicon-edit sign_up" href="/users/sign_up"> sign up</a>
            </li>
            <li class="">
              <a class="glyphicon glyphicon-log-in sign_in" href="/users/sign_in"> login</a>
            </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <%= yield %>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-3 col-xs-offset-9">
              <p>CopyRight Infratop.inc</p>
            </div>
            <div class="col-md-2">
              <div class="col">
              </div>
            </div>
        </div>
      </div>
    </footer>
  </body>
</html>
